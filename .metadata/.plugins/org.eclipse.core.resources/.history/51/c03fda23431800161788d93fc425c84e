package com.jiuqi.gov.acc.va.portal.func;

import static com.jiuqi.vacomm.utils.sys.PortalStatusInfo.*;

import com.jiuqi.dna.core.Context;
import com.jiuqi.dna.core.type.GUID;
import com.jiuqi.dna.ui.custom.Option;
import com.jiuqi.dna.ui.custom.configure.PropertyDescriptor;
import com.jiuqi.dna.ui.custom.configure.editors.BooleanEditor;
import com.jiuqi.dna.ui.custom.configure.editors.ComboTextEditor;
import com.jiuqi.dna.ui.viewpart.ConfigurableViewPartDefine;
import com.jiuqi.vacomm.utils.sys.PortalStatusInfo.BookInfoOption;

/**
 * GMC首页选项
 * 
 * @author huangrui
 *
 */
public class PortalSettingDefine extends ConfigurableViewPartDefine {
	
	private static final Option[] options;
	static {
		options = new Option[BookInfoOption.values().length];
		int i = 0;
		for (BookInfoOption value : BookInfoOption.values())
			options[i++] = new Option(value.name, value.title);
	}
	
	private final static String[] GROUP_NAMES = new String[] { "状态栏信息" };
	private final static PropertyDescriptor[] statusProperties = new PropertyDescriptor[] {
			new PropertyDescriptor(SHOW_BOOK_INFO, "当前账簿：", null,
					BookInfoOption.HIDEWHENSINGLE.name, new ComboTextEditor(options)),
			new PropertyDescriptor(SHOW_ORG_INFO, "当前组织机构：", null, "1",
					new BooleanEditor()),
			new PropertyDescriptor(SHOW_PERIOD_INFO, "当前期间：", null, "1",
					new BooleanEditor())
	};
	
	@Override
	public String getViewPageId() {
		return "GMC_PortalSettingDefine";
	}

	public PropertyDescriptor[] getProperties(Context context, int tabIndex,
			int groupIndex) {
		return statusProperties;
	}

	public String[] getPropertyGroups(Context context, int tabIndex) {
		return GROUP_NAMES;
	}

	public String[] getPropertyTabs(Context context) {
		return null;
	}

	public String getGroupName() {
		return "公用系统功能";
	}

	public String getHelpPageId() {
		return null;
	}

	public String getDescription() {
		return null;
	}

	public String getName() {
		return "GO_PORTAL_SETTING";
	}

	public String getTitle() {
		return "GMC首页选项";
	}

	public GUID getSettingDataId(Context context, GUID instanceId) {
		return PORTAL_SETTING_ID;
	}

}
